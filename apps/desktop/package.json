{
    "name": "@openbot/openbot-desktop",
    "version": "0.1.1",
    "description": "OpenBot Desktop - Professional agent management application",
    "main": "main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
        "dev:renderer": "cd renderer && npm run dev",
        "dev:electron": "sleep 5 && electron .",
        "build:renderer": "cd renderer && npm run build",
        "build": "npm run build:renderer && electron-builder",
        "postinstall": "cd renderer && npm install"
    },
    "keywords": [
        "electron",
        "openbot",
        "agent",
        "desktop",
        "ai"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.openbot.openbot",
        "productName": "OpenBot Desktop",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            {
                "from": "../dist",
                "to": "dist",
                "filter": [
                    "**/*"
                ]
            },
            "renderer/dist/**/*",
            "assets/**/*"
        ],
        "mac": {
            "category": "public.app-category.productivity"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}