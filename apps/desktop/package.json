{
    "name": "@openbot/openbot-desktop",
    "version": "0.1.1",
    "description": "OpenBot Desktop - Professional agent management application",
    "main": "main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
        "dev:renderer": "npm run dev --prefix renderer",
        "dev:electron": "run-s dev:wait electron:run",
        "dev:wait": "wait-on http://localhost:5173 -d 5000",
        "electron:run": "electron .",
        "build:renderer": "npm run build --prefix renderer",
        "build:gateway": "npm run build --prefix ../..",
        "build:copy-gateway": "node scripts/copy-gateway.js",
        "build": "npm run build:gateway && npm run build:copy-gateway && npm run build:renderer && electron-builder",
        "postinstall": "npm install --prefix renderer"
    },
    "keywords": [
        "electron",
        "openbot",
        "agent",
        "desktop",
        "ai"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2",
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1",
        "npm-run-all": "^4.1.5",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.openbot.openbot",
        "productName": "OpenBot Desktop",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "renderer/dist/**/*",
            "assets/**/*"
        ],
        "extraResources": [
            {
                "from": "gateway-dist",
                "to": "dist",
                "filter": ["**/*"]
            }
        ],
        "mac": {
            "category": "public.app-category.productivity"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}